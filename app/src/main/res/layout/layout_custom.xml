<?xml version="1.0" encoding="utf-8"?>
<com.kevin.wang.cva.benchmark.CustomRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="64dp">

    <com.kevin.wang.cva.benchmark.CustomImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>

    <com.kevin.wang.cva.benchmark.CustomLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/image">
        <com.kevin.wang.cva.benchmark.CustomTextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lipsum"/>
        <com.kevin.wang.cva.benchmark.CustomTextView
            android:id="@+id/text2"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quorum"/>
    </com.kevin.wang.cva.benchmark.CustomLinearLayout>

</com.kevin.wang.cva.benchmark.CustomRelativeLayout>